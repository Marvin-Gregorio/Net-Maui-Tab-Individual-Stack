<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Components.Header">

    <Grid
        RowDefinitions="*"
        BackgroundColor="Aquamarine">
        <HorizontalStackLayout 
            Spacing="10"
            Padding="20"
            HorizontalOptions="Center">
            <Button 
                Text="Tab1"
                WidthRequest="100"
                HeightRequest="50"
                Clicked="GoToPage1"/>
            <Button 
                Text="Tab2"
                WidthRequest="100"
                HeightRequest="50"
                Clicked="GoToPage2"/>
            <Button 
                Text="Tab3"
                WidthRequest="100"
                HeightRequest="50"
                Clicked="GoToPage3"/>
            <Button 
                Text="Reinitialize Tab1"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="ReinitializeTab1AndGoToTab1"/>
        </HorizontalStackLayout>
    </Grid>
    
</ContentView>
